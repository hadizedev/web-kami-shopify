{% if settings.display_popup_banner %}
{% comment %}
<!--http://jsfiddle.net/GH05T/fy0vzeag/-->
{% endcomment %}
<script type="text/javascript">
  $(window).load(function(){
    var clearCookie = function () {
      var result = $.removeCookie('PopupBannerCookies');
      if (result) {
        alert('Cookie removed, please reload.');
      } else {
        alert('Error: Cookie not deleted');
      }
    }

    var closeCookie = function () {
      $("#banner-modal").fadeOut();
      $.cookie('PopupBannerCookies', 'Notified', {
        expires: 7
      });
    }

    // Bind the buttons
    $("#clearCookie").on("click", clearCookie);
    $("#closeCookie").on("click", closeCookie);
    $(".content-banner img").on("click", closeCookie);

    // Now display the cookie if we need to
    if ($.cookie('PopupBannerCookies') == null) {
      $("#banner-modal").fadeIn();
    }
  });
</script>
<div class="bannerwrapper">
  <div id="banner-modal" style="display: none;">
    <div class="modal-overlay"></div>
    <div class="modal-window">
      <div class="window-window">
        <div class="window-content">
          <a id="closeCookie" class="btn close" title="close">&times;</a>
          <div class="content-banner">
            {% if settings.popup_banner_link != blank %}
            <a href="{{settings.popup_banner_link}}">
              {% endif %}
              <img src="{{ settings.banner_popup | img_url: '600x' }}" alt="Banner"/>
              {% if settings.popup_banner_link != blank %}
            </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<input id="clearCookie" class="hide" type="button" value="Delete Cookie"/>

<style>
  /* Popup Banner  ------------------------------------------------------------------- */
  #tinymce #banner-modal,
  #tinymce  #banner-modal .modal-window  { display:block !important; }

  #banner-modal { display:none; height:100%; left:0; position:fixed; top:0; width:100%; z-index:1041; }
  #banner-modal .modal-overlay { background: rgba(45,45,50,0.8); height:100%; position:absolute; width:100%; }
  #banner-modal .modal-window {min-height:320px; margin:0 auto; position:relative; top:25%; max-width: 600px; }    
  #banner-modal .window-window { position:relative;background-color: #fff; }
  #banner-modal .window-window .window-content .btn.close,
  .close-window,
  .close-modal { padding:0; height: 29px; width: 29px; position: absolute; right: -15px; top: -15px; z-index: 9; padding: 5px; border:0; cursor: pointer; filter:alpha(opacity=100); opacity:1; filter:alpha(opacity=100); /* For IE8 and earlier */-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=100)"; /* IE8 */}
  #banner-modal .window-window .window-content .btn.close:hover,
  .close-window:hover,
  .close-modal:hover { background-color: #e95144;}
  .content-banner img {display: block;cursor: pointer;width: 100%;}

  @media (min-width: 1441px){
    #banner-modal .modal-window {max-width: 1000px;}
  }
  @media screen and (max-width: 767px){
    #banner-modal .modal-window {width: 90%;}
    #banner-modal .window-window .window-content {width: 100%;}
    #banner-modal .window-window .window-content .left {width: 100%;margin: auto;float: none!Important;}
    #banner-modal .window-window .window-content .left input.btn {padding: 0 10px;}
  }
  @media screen and (max-width: 480px){
    #banner-modal .window-window .window-content .left {padding: 20px;}
  }
</style>
{% endif %}