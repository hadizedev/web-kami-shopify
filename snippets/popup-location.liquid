{% if settings.display_popup_location %}
<script type="text/javascript">// <![CDATA[
  jQuery(document).ready(function() {    //
    var $modalParent        = jQuery('div.popuplocationwrapper'),
        modalWindow         = jQuery('#email-modal'),
        emailModal          = jQuery('#email-modal'),
        modalPageURL        = window.location.pathname; 

    modalWindow = modalWindow.html();
    modalWindow = '<div id="email-modal">' + modalWindow + '</div>';
    $modalParent.css({'position':'relative'});
    jQuery('.wrapper #email-modal').remove();
    $modalParent.append(modalWindow);

    if (jQuery.cookie('locationSubcribeModal') != 'closed') {
      openEmailModalWindow();
    };

    jQuery('#email-modal .btn.close').click(function(e) {
      e.preventDefault();
      closeEmailModalWindow();
    });
    jQuery('body').keydown(function(e) {
      if( e.which == 27) {
        closeEmailModalWindow();
        jQuery('body').unbind('keydown');
      }
    });
    jQuery('#mc_embed_signup form').submit(function() {
      if (jQuery('#mc_embed_signup .email').val() != '') {
        closeEmailModalWindow();
      }
    });
    jQuery('.country-delivery .cookie-loc a').click(function(e) {
      e.preventDefault();
      closeEmailModalWindow();
      var initialPage = jQuery(this).attr('href');
      location.href = 'https://kamiidea.com' + initialPage;
    });

    function closeEmailModalWindow () {
      jQuery('#email-modal .modal-window').fadeOut(600, function() {
        jQuery('#email-modal .modal-overlay').fadeOut(600, function() {
          jQuery('#email-modal').hide();
          jQuery.cookie('locationSubcribeModal', 'closed', {expires:1, path:'/'});
        });
      })
    }
    function openEmailModalWindow () {
      jQuery('#email-modal').fadeIn(600, function() {
        jQuery('#email-modal .modal-window').fadeIn(600);
      });
    }

  });
  // ]]
  // ]]></script>
<div class="popuplocationwrapper">
  <div id="email-modal" style="display: none;">
    <div class="modal-overlay"></div>
    <div class="modal-window" style="display: none;">
      <div class="window-window">
        <div class="window-content">
          <a class="btn close">&times;</a>
          <div class="window-location">
            <div class="logo-popup text-center">
              <img src="{{ settings.logo_popup | img_url: '100x' }}" alt="Logo"/>
            </div>
            <ul class="country-delivery">
              {% if settings.location1 != blank %}
              <li class="location1 cookie-loc">
                <a href="{{settings.location1_url}}">
                  {{settings.location1}}
                </a>
              </li>
              {% endif %}
              {% if settings.location2 != blank %}
              <li class="location2 cookie-loc">
                <a href="{{settings.location2_url}}">
                  {{settings.location2}}
                </a>
              </li>
              {% endif %}
              {% if settings.location3 != blank %}
              <li class="location3">
                <a href="{{settings.location3_url}}">
                  {{settings.location3}}
                </a>
              </li>
              {% endif %}
            </ul>
            <p class="text-center">
              {{ settings.bottom_popup}}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Popup Newsletter  ------------------------------------------------------------------- */
  #tinymce #email-modal,
  #tinymce  #email-modal .modal-window  { display:block !important; }

  #email-modal { display:none; height:100%; left:0; position:fixed; top:0; width:100%; z-index:1041; }
  #email-modal .modal-overlay { background: rgba(45,45,50,0.8); height:100%; position:absolute; width:100%; }
  #email-modal .modal-window { background-color: #fff;display:none; min-height:320px; margin:0 auto; position:relative; top:25%; max-width: 400px; }    
  #email-modal .window-window { position:relative;background-color: #fff; }
  #email-modal .window-window .window-background { opacity: 0.8; filter:alpha(opacity=80);}
  #email-modal .window-window .window-content { position:relative; background: #fff;}
  #email-modal .window-window .window-content .left {text-align: center; padding: 40px 35px 0 35px; }
  #email-modal .window-window .window-content .right { width: 319px;}
  #email-modal .window-window .window-content .rightx {margin: auto;}
  #email-modal .window-window .window-content .rightx img { display: block; }
  #email-modal .window-window .window-content .btn.close,
  .close-window,
  .close-modal { padding:0; height: 29px; width: 29px; position: absolute; right: -15px; top: -15px; z-index: 9; padding: 5px; border:0; cursor: pointer; filter:alpha(opacity=100); opacity:1; filter:alpha(opacity=100); /* For IE8 and earlier */-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=100)"; /* IE8 */}
  #email-modal .window-window .window-content .btn.close:hover,
  .close-window:hover,
  .close-modal:hover { background-color: #e95144;}
  #email-modal .window-window .window-content .title {position: relative; letter-spacing: 0.05em; margin-bottom: 8px; }
  #email-modal .window-window .window-content .sub-title { margin-bottom: 15px; letter-spacing: 0.05em; color: #555555; }
  #email-modal .window-window .window-content .message {clear: both;  padding: 15px 0 23px; margin-bottom: 0px; letter-spacing: 2px!important; font-size: 12px; font-weight: 700; text-transform: uppercase; line-height: 20px; }
  #mailchimp-email-subscibe input[type="email"] {font-size: 12px;}
  @media (min-width: 1441px){
    #banner-modal .modal-window {max-width: 1000px;}
  }
  @media screen and (max-width: 767px){
    #email-modal .window-window .window-content .right {display: none;}
    #email-modal .modal-window {width: 90%;}
    #email-modal .window-window .window-content {width: 100%;}
    #email-modal .window-window .window-content .left {width: 100%;margin: auto;float: none!Important;}
    #email-modal .window-window .window-content .left input.btn {padding: 0 10px;}
  }
  @media screen and (max-width: 480px){
    #email-modal .window-window .window-content .left {padding: 20px;}
  }

  /* Location */
  #email-modal .modal-window, .window-location {background-color: {{settings.bg_color_popup}};padding: 15px;}
  .logo-popup {padding: 55px 0 40px;}
  .country-delivery {margin: 0;padding: 0 40px;}
  .country-delivery li {
    list-style-type: none;
    text-align: center;
    margin-bottom: 20px;
  }
  .country-delivery li:last-child {margin-bottom: 10px;}
  .country-delivery li a {
    background: #000;
    color: #fff;
    border-radius: 5px;
    text-transform: uppercase;
    display: inline-block;
    width: 100%;
    padding: 12px 0;
    letter-spacing: 2px;
  }
  .window-location p {
    text-transform: uppercase;
    margin: 14px 0px 20px;
    font-size: 11px;
    letter-spacing: 2px;
  }
</style>

{% endif %}