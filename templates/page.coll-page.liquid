<!-- /templates/page.liquid -->
<style>
  .breadcrumb {
    display: none;
  }
  .main-content .wrapper {
    max-width: 100%;
    padding: 0;
  }
  .main-content .wrapper .grid__item {
    padding: 0;
  }
  .collaborations ul {
    margin: 0;
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
  }
  .collaborations ul li {
    list-style: none;
    width: 33.333%;
    transition: all .4s ease-in-out;
  }
  .collaborations ul li.col-three {
    width: 33.333%;
  }
  .collaborations ul li.col-four {
    width: 25%;
  }
  .collaborations ul li.col-five {
    width: 20%;
  }
  .collaborations ul li:hover {
    opacity: .7;
  }
  .collaborations ul li a, .collaborations ul li img {
    display: block;
    width: 100%;
    margin: 0!important;
    max-width: 100%!important;

  }
  @media (max-width: 480px){
    .template-noindex .main-content {
      padding-top: 15px;
    }
    .section-header.text-center h1 {
      font-size: 24px;
    }
    .collaborations ul li {
      width: 50%!important;
    }
    #steal-the-deal .collaborations ul li {
      width: 25%!important;
    }
  }
</style>
<div class="gridx">
  <div class="grid__item">

    {% unless page.handle == 'about' %}
    <header class="section-header text-center">
      <h1>{{ page.title }}</h1>
    </header>
    {% endunless %}

    <div class="rte rte--nomargin rte--indented-images">
      {% if page.handle == 'collaborations' %}
      {% section 'coll-page' %}
      {% elsif page.handle == 'kamipeople' %}
      {% section 'coll-page-kamipeople' %}
      {% elsif page.handle == 'october-happiness-parade' %}
      {% section 'coll-page-stealdeal' %}
      {% elsif page.handle == 'our-stores-1' %}
      {% section 'coll-page-our-store' %}
      {% endif %}
    </div>

  </div>
</div>
