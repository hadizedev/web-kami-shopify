<style>
  .section-item {
    padding: 60px 0 0;
  }
  .section-linktree {
      max-width: 600px;
      margin: auto;
      margin-bottom: 60px;
  }
  .section-linktree h2 {
    font-size: 28px;
    letter-spacing: normal !important;
    margin: 0;
  }
  
  .item-data .sub:not(.sub-heading):hover {
    background-color: #f0f0f0;
  }

  @media (max-width: 480px) {
    .section-item {
      padding: 30px 0 0;
    }
    .section-linktree h2 {
      font-size: 20px;
    }
    .template-noindex .main-content {
        padding-top: 0;
    }
  }
</style>
<div class="grid">
  <div class="grid__item">

    {% unless page.handle == 'about' %}
    <header class="section-header text-center hide hidden">
      <h1>{{ page.title }}</h1>
    </header>
    {% endunless %}

    <div class="grid">
      <div class="grid__item">
        <div class="rte rte--nomargin rte--indented-images">
          <div id="accordion">
            <div class="section-item">
              {% if page.handle == 'find-us' %}
                {% section 'linktree-find-us-1' %}
                {% section 'linktree-find-us-2' %}
                {% section 'linktree-find-us-3' %}
                {% section 'linktree-find-us-4' %}
                {% section 'linktree-find-us-5' %}
                {% section 'linktree-find-us-6' %}
              {% endif %}
              {% if page.handle == 'e-catalog' %}
                {% section 'linktree-ecatalog-1' %}
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const items = document.querySelectorAll('.item-data .sub');
    items.forEach(function(item) {
      item.addEventListener('click', function() {
        const url = item.getAttribute('data-href');
        if (url) {
            window.open(url, '_blank');
        }
      });
    });
  });
</script>