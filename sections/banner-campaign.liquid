<div class="swiper-container">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
    <div class="swiper-slide">
      <a href="{% if block.settings.slide_link != blank %}{{block.settings.slide_link}}{% else %}#{% endif %}">
        <img src="{{block.settings.image | img_url: 'master'}}" alt="">
      </a>
    </div>
    {% endfor %}
  </div>
  <!-- Add Arrows -->
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
</div>
{% schema %}
  {
    "name": "Banner",
	"class": "banner-campaign",
    "max_blocks": 10,
    "settings": [],
    "blocks" : [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "slide_link",
            "label": "Slide link"
          }
        ]
      }
    ]
  }
{% endschema %}